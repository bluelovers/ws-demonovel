{
  "packages": [
    "packages/*",
    "packages/@demonovel/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/node_modules/**",
        "**/__snapshots__/**",
        "**/__fixtures__/**",
        "**/test/**",
        "**/tests/**",
        "**/__tests__/**",
        "*.map",
        "*.spec.*",
        "*.test.*",
        "**/test/temp/**",
        "lerna.json",
        "CHANGELOG.md",
        ".gitignore",
        ".gitrepo"
      ],
      "message": "chore(release): publish",
      "bump": "patch",
      "conventionalCommits": true,
      "conventionalGraduate": false,
      "concurrency": 1,
      "loglevel": "silly",
      "noPrivate": true
    },
    "run": {
      "stream": true,
      "concurrency": 1
    },
    "exec": {
      "stream": true,
      "concurrency": 1
    },
    "version": {
      "concurrency": 1,
      "noPrivate": true,
      "conventionalCommits": true,
      "changelogPreset": "@bluelovers/conventional-changelog-bluelovers"
    },
    "add": {
      "concurrency": 1,
      "stream": true
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent"
}
